<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.ScanFragment"
    android:background="@color/white"
    android:gravity="center_vertical|center_horizontal">

    <ImageButton
        android:id="@+id/scan_fragment_scan_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/scan_fragment_scan_button"
        android:background="@color/white"
        android:scaleType="centerCrop"
        android:src="@drawable/crosshair"
        android:contentDescription="@string/description" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/scan_fragment_scan_button"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:elevation="6dp"
        app:layout_constraintTop_toBottomOf="@id/scan_fragment_scan_image"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:backgroundTint="@color/black"
        android:contentDescription="@string/description" />

</androidx.constraintlayout.widget.ConstraintLayout>